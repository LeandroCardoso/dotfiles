#!/usb/bin/bash

# Don't run this script if unless the distribution is Gentoo
if [[ "$(lsb_release -si)" != *"Gentoo"* ]]; then
    exit
fi

alias emerge-rm="sudo emerge --deselect $* && emerge --depclean"
alias emerge-update="sudo emerge --deep --newuse --update @world && emerge --depclean"
alias emerge-newuse="sudo emerge --deep --newuse @world && emerge --depclean"
